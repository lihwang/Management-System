{
    "presets": [
        [
            "@babel/preset-env",
            {
                "loose": true,
                "modules": false
            }
        ],
        "@babel/preset-react"
    ],
    "plugins": [
        ["@babel/plugin-proposal-class-properties"],
        [
            "@babel/plugin-transform-runtime",
            {
                "corejs": 2
            }
        ], ["import", {
            "libraryName": "antd",
            "libraryDirectory": "es",
            "style": "css" 
          }]
    ]
}